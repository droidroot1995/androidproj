<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.linux.alex.neonxo.player1"
    android:background="#ff020202"
    android:screenOrientation="portrait">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/playerX"
        android:background="@drawable/x"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/player0"
        android:layout_alignStart="@+id/player0"
        android:layout_marginTop="27dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/player0"
        android:background="@drawable/x0"
        android:layout_above="@+id/back"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp" />

    <TextView
        android:layout_width="405dp"
        android:layout_height="46dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:background="@drawable/header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/AppTheme"
        android:autoText="false"
        android:textColor="#ff00fff7"
        android:textColorHighlight="@android:color/holo_green_light"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:visibility="visible"
        android:textIsSelectable="false"
        android:textColorLink="#ff00fffc" />
    <ImageButton
        android:layout_width="142dp"
        android:layout_height="45dp"
        android:id="@+id/back"
        android:background="@drawable/back"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
